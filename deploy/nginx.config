upstream tnki_backend_upstream {
    server 127.0.0.1:3001;
    keepalive 64;
}


server {
    listen 80; 
    listen [::]:80;
    server_name tnki.octopuese.xyz;
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl;

    root /var/www/Tnki/client/dist;
    index index.html index.htm;

    server_name tnki.octopuese.xyz;
    ssl_certificate /etc/letsencrypt/live/tnki.octopuese.xyz/cert.pem;
    ssl_certificate_key /etc/letsencrypt/live/tnki.octopuese.xyz/privkey.pem;

    location / {
	      try_files $uri $uri/ /index.html =404;
    }

    location /api {
        proxy_redirect off;
        proxy_set_header   X-Real-IP            $remote_addr;
        proxy_set_header   X-Forwarded-For  $proxy_add_x_forwarded_for;
        proxy_set_header   X-Forwarded-Proto $scheme;
        proxy_set_header   Host                   $http_host;
        proxy_set_header   X-NginX-Proxy    true;
        proxy_set_header   Connection "";
        proxy_http_version 1.1;
        proxy_cache one;
        proxy_cache_key sfs$request_uri$scheme;
        proxy_pass         https://tnki_backend_upstream/api;
    }

    location ~* \.(?:css|js)$ {
        expires 72h;
        access_log off;
        add_header Cache-Control "public";
    }

    location ~* \.(?:png|jpg|svg|woff2)$ {
        expires 1M;
        access_log off;
        add_header Cache-Control "public";
    }
}
